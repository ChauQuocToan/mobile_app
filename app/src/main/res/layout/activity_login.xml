<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <Button
        android:id="@+id/button5"
        android:layout_width="165dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#FAF7F7"
        android:text="Đăng Nhập"
        android:textColor="#090909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#FAF6F6"
        android:text="Đăng Ký"
        android:textColor="#0B0A0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="349dp"
        android:layout_height="49dp"
        android:layout_marginTop="236dp"
        android:backgroundTint="#ACA7A7"
        android:ems="10"
        android:hint="Vị Trí: Việt Nam"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enteredUsername"
        android:layout_width="356dp"
        android:layout_height="46dp"
        android:layout_marginTop="288dp"
        android:backgroundTint="#9C9797"
        android:ems="10"
        android:hint="Địa chỉ email"
        android:inputType="text"
        android:textColor="#9C9494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enteredPassword"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="#AE9D9D"
        android:ems="10"
        android:hint="Mật Mã"
        android:inputType="text"
        android:textColor="#B1A9A9"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="121dp"
        android:layout_height="23dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="24dp"
        android:text="Quên Mật Khẩu?"
        android:textColor="#B6B1B1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNext1"
        android:layout_width="361dp"
        android:layout_height="66dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#E08963"
        android:text="ĐĂNG NHẬP"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="24dp"
        android:layout_marginTop="512dp"
        android:gravity="center"
        android:text="--- Hoặc Tham Gia---"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="84dp"
        android:layout_marginTop="650dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/daanhmuc" />

            <ImageView
                android:id="@+id/search1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/moi" />

            <ImageView
                android:id="@+id/cart2222222"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/giohang" />

            <ImageView
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/nguoi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mua sắm" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Danh mục" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mới" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gio hang" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tôi" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="109dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopolo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="62dp"
        android:layout_height="39dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="544dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gg" />
</androidx.constraintlayout.widget.ConstraintLayout>
